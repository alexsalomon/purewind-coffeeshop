
vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args

transform()
  vendor('transform', arguments)

transition()
  vendor('transition', arguments)

transform-origin()
  vendor('transform-origin', arguments)

.is-transparent
  background-color: transparent

.navbar-burger
  display: flex
  align-items: center
  justify-content: center

.navbar-burger__icon
  width: 25px
  height: 22px
  position: relative
  transform: rotate(0deg)
  transition: 0.5s ease-in-out
  cursor: pointer

.navbar-burger__icon span
  width: 100%
  height: 3px
  display: block
  position: absolute
  left: 0
  opacity: 1
  background: black
  border-radius: 20px
  transform: rotate(0deg)
  transition: 0.25s ease-in-out

.navbar-burger__icon span:nth-child(1)
  top: 0px
  transform-origin: left center

.navbar-burger__icon span:nth-child(2)
  top: 7px
  transform-origin: left center

.navbar-burger__icon span:nth-child(3)
  top: 14px
  transform-origin: left center

.navbar-burger__icon.open span:nth-child(1)
  top: -1px
  left: 4px
  transform: rotate(45deg)

.navbar-burger__icon.open span:nth-child(2)
  width: 0%
  opacity: 0

.navbar-burger__icon.open span:nth-child(3)
  top: 17px
  left: 4px
  transform: rotate(-45deg)
