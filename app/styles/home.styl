$primary-color = #0085B3

.branding
  text-align: center

.branding__logo
  width: 80%
  margin: 1.5rem 1rem 0.5rem 1rem

.highlights
  text-align: center

.highlights__title
  font-size: 1.5rem
  font-weight: bold
  line-height: normal

.restaurant-info
  // TODO: Waiting for updated image to use with border-image
  background-color: $primary-color //Use the fill property of border-image to color element background
  border-style: solid
  border-width: 25px 0 25px 0
  border-image: url(../images/border-blue-top.svg)
  border-image-slice: 25 0 25 0
  border-image-width: 1 0 1 0
  text-align: center
  color: white

.restaurant-info__info-section
  margin 1rem 0

.restaurant-info__title
  font-size: 2rem

.restaurant-info__text
  font-family: Corbel
  font-size: 1.5rem
